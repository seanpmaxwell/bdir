{
  "name": "bdir",
  "version": "1.0.3",
  "description": "Bi-directional object handler for managing enumerable values and their labels.",
  "keywords": [
    "bdir",
    "bidirectional",
    "enum",
    "reverse-lookup",
    "labels",
    "values",
    "typescript",
    "utility",
    "validation"
  ],
  "homepage": "https://github.com/seanpmaxwell/bdir#readme",
  "bugs": {
    "url": "https://github.com/seanpmaxwell/bdir/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanpmaxwell/bdir.git"
  },
  "license": "MIT",
  "author": "seanpmaxwell1",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json && tsc -p tsconfig.types.json",
    "clean-install": "rm -rf ./node_modules && rm -r package-lock.json && npm i",
    "lint": "eslint .",
    "format": "eslint --fix .",
    "pre-publish": "mv README.md README-git && mv README-npm README.md",
    "post-publish": "mv README.md README-npm && mv README-git README.md",
    "test": "NODE_ENV=test vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.1",
    "@types/node": "^22.8.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.15"
  }
}
